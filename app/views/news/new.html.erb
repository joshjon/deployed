<% provide(:title, "Submit") %>

  <section class="section-margins">
    <div class="row">
      <div class="col-md-8">
        <h1 class="title">Create a post</h1>
        <%= form_for @news do |f| %>
          <%= render 'shared/error_messages', object: f.object %>
          <div class="form-group">
            <%= f.text_area :title, required: true, class: "form-control", placeholder: "title", cols: 35, rows: 3, required: true %>
          </div>

          <div class="form-group">
            <p>
              Source (optional)
            </p>
            <%= f.url_field :url, class: "form-control", placeholder: "url" %>
          </div>

          <div class="form-group">
            <%= f.button :submit, class: "btn btn-primary button-regular" %>
          </div>
        <% end %>
      </div>
    </div>
</section>
