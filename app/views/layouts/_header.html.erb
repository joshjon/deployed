<header class="navbar navbar-fixed-top ">
  <div class="container">
    <%= image_tag "logo.png", id: "logo" %>
    <span class="clean-hover">
      <%= link_to "Deployed", root_path, id: "logoText" %>
    </span>
    <nav>
      <ul class="nav navbar-nav">
        <li class="<%= 'active' if current_page?(root_path) %>"><%= link_to "Home", root_path %></li>
        <li class="<%= 'active' if current_page?(newcomments_path) %>"><%= link_to "Comments", newcomments_path %></li>
        <li class="<%= 'active' if current_page?(submit_path) %>"><%= link_to "Submit", submit_path %></li>
        <li class="<%= 'active' if current_page?(about_path) %>"><%= link_to "About", about_path %></li>
        <% if logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li class="<%= 'active' if current_page?(login_path) %>"><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
